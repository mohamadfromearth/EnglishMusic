<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/songCoverCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
<ImageView
    android:id="@+id/songCover"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameOfArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ticket"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/songCoverCard" />

    <TextView
        android:id="@+id/nameOfSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ticket to my "
        android:layout_marginStart="8dp"
        android:textColor="@color/subText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameOfArtist" />



</androidx.constraintlayout.widget.ConstraintLayout>